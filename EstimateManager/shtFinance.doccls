    bEnableEvent = True
End Sub

'이월부가세값이 없으면 지난달 납부할 부가세에서 가져옴
Function SetLastVAT()
    Dim db As Variant
    Dim id As Long
    Dim lastVAT, dueVAT As Variant
        
    db = Get_DB(shtFinanceData)
    db = Filtered_DB(db, fromDate, 2)
    If isEmpty(db) Then
        Insert_Record shtFinanceData, fromDate
        id = Get_LastID(shtFinanceData)
        lastVAT = ""
    Else
        id = CLng(db(1, 1))
        lastVAT = db(1, 3)
    End If
    
    If lastVAT = "" Then
        If id > 1 Then
            id = id - 1
            db = Get_Record_Array(shtFinanceData, id)
            lastVAT = db(4)
        End If
    End If
    
    SetLastVAT = lastVAT
End Function

